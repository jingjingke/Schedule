<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/head_all"
    android:background="@drawable/bg_head_gradient"
    android:elevation="@dimen/font_size_large"
    android:orientation="horizontal"
    android:paddingTop="@dimen/head_top"
    android:paddingBottom="@dimen/head_bottom">

    <ImageView
        android:id="@+id/headBackIcon"
        android:layout_width="60dip"
        android:layout_height="28dip"
        android:layout_gravity="center"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/headTitle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorLight"
        android:textSize="@dimen/font_size_large" />

    <ImageView
        android:id="@+id/headLeftIcon"
        android:layout_width="60dip"
        android:layout_height="28dip"
        android:layout_gravity="center"
        android:visibility="invisible" />

</LinearLayout>
