<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorThemeLight"></solid>
            <corners android:radius="@dimen/radius_small"></corners>
            <stroke android:width="@dimen/border_small" android:color="@color/colorTheme"></stroke>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorThemeLight"></solid>
            <corners android:radius="@dimen/radius_small"></corners>
            <stroke android:width="@dimen/border_small" android:color="@color/colorThemeSub"></stroke>
        </shape>
    </item>
</selector>